---
import Layout from '@/layouts/Layout.astro';
import { Image } from 'astro:assets';
import portraitImage from '@/images/azmi-portrait.jpeg';
import { workExpYears } from '@/utils/constants';
import { Icon } from 'astro-icon/components';
import GetResumeButton from '@/components/buttons/GetResumeButton.astro';
---

<Layout>
	<div class="base-container py-24">
		<div
			class="flex flex-col lg:flex-row lg:h-dvh justify-center items-center gap-16"
		>
			<div class="w-full flex flex-col gap-y-8 items-center">
				<Image
					class="w-28 h-28 md:w-48 md:h-48 rounded-full"
					src={portraitImage}
					alt="Azmi"
				/>
				<div class="flex gap-x-5 text-4xl">
					<a
						href="https://www.linkedin.com/in/azmi6298/"
						target="_blank"
						rel="noreferrer"
					>
						<Icon name="linkedin" class="hover:text-blue-400" />
					</a>
					<a
						href="https://github.com/azmi6298"
						target="_blank"
						rel="noreferrer"
					>
						<Icon name="github" class="hover:text-gray-600" />
					</a>
					<a
						href="https://instagram.com/azmi6298"
						target="_blank"
						rel="noreferrer"
					>
						<Icon name="instagram" class="hover:text-orange-400" />
					</a>
				</div>
				<GetResumeButton />
			</div>
			<div class="flex flex-col gap-y-4">
				<p class="font-semibold text-xl md:text-2xl lg:text-4xl">
					Hi, I'm Azmi
				</p>
				<p class="description">
					I'm a passionate web developer with {workExpYears} years of experience
					building web applications. Have various experienced in both frontend and
					backend development and have a strong understanding of industry standards.
					I'm always eager to dive into new technologies and discover innovative
					solutions.
				</p>
				<p class="description">
					When not immersed in code, I enjoy unwinding with a competitive game
					of ping pong 🏓 or hitting the gym 🏋🏻 to recharge, fueling creativity
					and productivity.
				</p>
			</div>
		</div>
	</div>
</Layout>

<style>
	.description {
		@apply text-sm md:text-lg;
	}
</style>
